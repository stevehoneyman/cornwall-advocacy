{% if item.acf_fc_layout == 'accordian_block' %}
  <div class="accordian">
    {% if item.title %}
    <h2 class="section-title">{{ item.title }}</h2>
    {% endif %}
    <p class="text">{{ item.text }}</p>
    {% for item in item.accordian %}
      <div class="accordian-item">
        <p class="item-title">{{ item.title }}
          <img src="/wp-content/themes/cornwall-advocacy/icons/Icon_Plus.svg" class="faq-cross">
        </p>
        <p class="item-content">{{ item.content }}</p>
      </div>
    {% endfor %}
  </div>
{% endif %}
