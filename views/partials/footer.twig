<footer role="contentinfo">

  <div class="footer-statement">
    <a href="/" class="logo">
      <img src="/wp-content/themes/cornwall-advocacy/icons/Logo_B.svg" aria-label="cornwall advocacy logo">
    </a>
    <div class="content">
      <div class="left-col">
        <p class="text">{{ options.footer_statement }}</p>
        <a href="/about-us" class="link">Find out more about us</a>
      </div>
      <div class="right-col">
        <a href="/contact-us" class="link link-contact">View our contact details</a>
        <a href="{{ options.facebook }}" class="link link-facebook">{{ options.statement_social_link }}</a>
      </div>
    </div>
  </div>

  <div class="footer-details">
    <div class="organisation-info">
      <p>Â© Cornwall Advocacy {{ now|date('Y') }}</p>
      <p>Registered Charity No: {{ options.charity }}</p>
    </div>
    <ul class="footer-nav">
      {% for nav_item in details.items %}
        <li class="nav-item">
          <a class="nav-link" href="{{ nav_item.link }}">{{ nav_item.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
</footer>
